Global WindowMain

Global GadgetQueue, ButtonStartStop, ButtonNew, ButtonDelete, ButtonEdit, ButtonUp, ButtonDown, ButtonRequeue

Declare ResizeGadgetsWindowMain()

Declare ButtonStartStop(EventType)
Declare ButtonNew(EventType)
Declare ButtonDown(EventType)
Declare GadgetQueue(EventType)
Declare ButtonRequeue(EventType)
Declare ButtonEdit(EventType)
Declare ButtonUp(EventType)
Declare ButtonDelete(EventType)

Procedure OpenWindowMain(x = 0, y = 0, width = 800, height = 500)
  WindowMain = OpenWindow(#PB_Any, x, y, width, height, "ffmpegGUI", #PB_Window_SystemMenu | #PB_Window_MinimizeGadget | #PB_Window_MaximizeGadget | #PB_Window_SizeGadget | #PB_Window_Invisible | #PB_Window_ScreenCentered)
  GadgetQueue = ListIconGadget(#PB_Any, 10, 10, 720, 480, "Filename", 120, #PB_ListIcon_MultiSelect | #PB_ListIcon_GridLines | #PB_ListIcon_FullRowSelect | #PB_ListIcon_HeaderDragDrop | #PB_ListIcon_AlwaysShowSelection)
  ButtonStartStop = ButtonImageGadget(#PB_Any, 740, 10, 50, 50, 0)
  GadgetToolTip(ButtonStartStop, "Start/stop queue")
  ButtonNew = ButtonImageGadget(#PB_Any, 740, 70, 50, 50, 0)
  GadgetToolTip(ButtonNew, "Add a new job")
  ButtonDelete = ButtonImageGadget(#PB_Any, 740, 190, 50, 50, 0)
  GadgetToolTip(ButtonDelete, "Delete selected job")
  ButtonEdit = ButtonImageGadget(#PB_Any, 740, 250, 50, 50, 0)
  GadgetToolTip(ButtonEdit, "Edit selected job")
  ButtonUp = ButtonImageGadget(#PB_Any, 740, 310, 50, 25, 0)
  GadgetToolTip(ButtonUp, "Move selected job up in queue")
  ButtonDown = ButtonImageGadget(#PB_Any, 740, 340, 50, 25, 0)
  GadgetToolTip(ButtonDown, "Move selected job down in queue")
  ButtonRequeue = ButtonImageGadget(#PB_Any, 740, 130, 50, 50, 0)
  GadgetToolTip(ButtonRequeue, "Requeue selected job (set state to 'waiting')")
EndProcedure

Procedure ResizeGadgetsWindowMain()
  Protected FormWindowWidth, FormWindowHeight
  FormWindowWidth = WindowWidth(WindowMain)
  FormWindowHeight = WindowHeight(WindowMain)
  ResizeGadget(GadgetQueue, 10, 10, FormWindowWidth - 80, FormWindowHeight - 20)
  ResizeGadget(ButtonStartStop, FormWindowWidth - 60, 10, 50, 50)
  ResizeGadget(ButtonNew, FormWindowWidth - 60, 70, 50, 50)
  ResizeGadget(ButtonDelete, FormWindowWidth - 60, 190, 50, 50)
  ResizeGadget(ButtonEdit, FormWindowWidth - 60, 250, 50, 50)
  ResizeGadget(ButtonUp, FormWindowWidth - 60, 310, 50, 25)
  ResizeGadget(ButtonDown, FormWindowWidth - 60, 340, 50, 25)
  ResizeGadget(ButtonRequeue, FormWindowWidth - 60, 130, 50, 50)
EndProcedure

Procedure WindowMain_Events(event)
  Select event
    Case #PB_Event_SizeWindow
      ResizeGadgetsWindowMain()
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
        Case GadgetQueue
          GadgetQueue(EventType())          
        Case ButtonStartStop
          ButtonStartStop(EventType())          
        Case ButtonNew
          ButtonNew(EventType())          
        Case ButtonDelete
          ButtonDelete(EventType())          
        Case ButtonEdit
          ButtonEdit(EventType())          
        Case ButtonUp
          ButtonUp(EventType())          
        Case ButtonDown
          ButtonDown(EventType())          
        Case ButtonRequeue
          ButtonRequeue(EventType())          
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure

