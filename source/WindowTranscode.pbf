Global WindowTranscode

Global StringInput, Gadget, Gadget, StringOutput, Text_1_Copy1_Copy1, StringPosition, Text_1_Copy1_Copy1_Copy1, StringFrames, Text_1_Copy1_Copy1_Copy1_Copy1, Text_1_Copy1_Copy1_Copy1, Gadget, Frame3D_0_Copy1, StringTimeElapsed, StringTimeRemaining, ProgressBarVideo


Procedure OpenWindowTranscode()
  WindowTranscode = OpenWindow(#PB_Any, 0, 0, 375, 220, "Transcoding video", #PB_Window_SystemMenu | #PB_Window_MinimizeGadget | #PB_Window_Invisible | #PB_Window_ScreenCentered)
  StringInput = StringGadget(#PB_Any, 70, 30, 290, 20, "C:\", #PB_String_ReadOnly)
  Gadget = TextGadget(#PB_Any, 15, 30, 50, 20, "Input:")
  Gadget = TextGadget(#PB_Any, 15, 60, 50, 20, "Output:")
  StringOutput = StringGadget(#PB_Any, 70, 60, 290, 20, "C:\", #PB_String_ReadOnly)
  Text_1_Copy1_Copy1 = TextGadget(#PB_Any, 15, 120, 50, 20, "Position:")
  StringPosition = StringGadget(#PB_Any, 70, 120, 130, 20, "00:00:00 / 00:00:00", #PB_String_ReadOnly)
  Text_1_Copy1_Copy1_Copy1 = TextGadget(#PB_Any, 210, 120, 50, 20, "Frames:")
  HideGadget(Text_1_Copy1_Copy1_Copy1, 1)
  StringFrames = StringGadget(#PB_Any, 260, 120, 100, 20, "0 / 0", #PB_String_ReadOnly)
  HideGadget(StringFrames, 1)
  Text_1_Copy1_Copy1_Copy1_Copy1 = TextGadget(#PB_Any, 195, 150, 90, 20, "Time remaining:")
  Text_1_Copy1_Copy1_Copy1 = TextGadget(#PB_Any, 15, 150, 75, 20, "Time elapsed:")
  Gadget = Frame3DGadget(#PB_Any, 5, 5, 365, 85, "Transcoding")
  Frame3D_0_Copy1 = Frame3DGadget(#PB_Any, 5, 95, 365, 120, "Progress")
  StringTimeElapsed = StringGadget(#PB_Any, 95, 150, 70, 20, "00:00:00", #PB_String_ReadOnly)
  StringTimeRemaining = StringGadget(#PB_Any, 290, 150, 70, 20, "00:00:00", #PB_String_ReadOnly)
  ProgressBarVideo = ProgressBarGadget(#PB_Any, 15, 180, 345, 25, 0, 100, #PB_ProgressBar_Smooth)
EndProcedure

Procedure WindowTranscode_Events(event)
  Select event
    Case #PB_Event_CloseWindow
      ProcedureReturn #False

    Case #PB_Event_Menu
      Select EventMenu()
      EndSelect

    Case #PB_Event_Gadget
      Select EventGadget()
      EndSelect
  EndSelect
  ProcedureReturn #True
EndProcedure

